{
    "name": "SCope",
    "version": "1.8.2",
    "description": "Visualization tool for large-scale and high dimensional single-cell data",
    "main": "index.js",
    "scripts": {
        "dev": "webpack serve --config config/webpack.dev.js",
        "build": "webpack --config config/webpack.prod.js",
        "start": "npm run dev",
        "test": "jest --coverage",
        "lint-fix": "eslint --fix 'src/**/*.{ts,jsx,tsx}'",
        "lint": "tsc --noEmit && eslint 'src/**/*.{ts,jsx,tsx}'",
        "bundle-size-analyse": "webpack --config config/webpack.dev.js --profile --json > stats.json"
    },
    "keywords": [
        "single-cell",
        "gene",
        "regulatory",
        "networks",
        "grn",
        "large-scale data",
        "visualization"
    ],
    "author": "Maxime De Waegeneer <mdewaegeneer@gmail.com>",
    "license": "GPL-3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/aertslab/SCope.git"
    },
    "dependencies": {
        "d3": "^4.12.0",
        "fomantic-ui-css": "^2.8.8",
        "grpc-bus-websocket-client": "^0.3.1",
        "immer": "^9.0.5",
        "js-file-download": "^0.4.12",
        "json2csv": "^5.0.6",
        "pako": "^2.0.2",
        "pixi.js": "^5.3.3",
        "ramda": "^0.27.0",
        "rc-slider": "^9.7.2",
        "react": "^16.14.0",
        "react-csv-reader": "^3.4.0",
        "react-dnd": "^14.0.4",
        "react-dnd-html5-backend": "^14.0.2",
        "react-dom": "^16.14.0",
        "react-favicon": "^0.0.25",
        "react-file-reader-input": "^2.0.0",
        "react-json-view": "^1.20.5",
        "react-popup": "^0.9.3",
        "react-redux": "^7.2.2",
        "react-router-dom": "^6.0.2",
        "react-table": "^6.8.6",
        "redux": "^4.0.5",
        "redux-saga": "^1.1.3",
        "semantic-ui-react": "^2.0.1",
        "three": "^0.138.3"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.8",
        "@babel/core": "^7.12.9",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
        "@babel/plugin-transform-runtime": "^7.12.1",
        "@babel/preset-env": "^7.12.7",
        "@babel/preset-react": "^7.12.7",
        "@babel/runtime": "^7.12.5",
        "@redux-saga/testing-utils": "^1.1.3",
        "@testing-library/dom": "^8.11.1",
        "@testing-library/jest-dom": "^5.15.0",
        "@testing-library/react": "^12.1.2",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.0.2",
        "@types/ramda": "^0.27.32",
        "@types/react": "^16.14.2",
        "@types/react-dom": "^16.9.10",
        "@types/react-redux": "^7.1.11",
        "@types/three": "^0.138.0",
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.5.0",
        "babel-jest": "^27.0.6",
        "babel-loader": "^8.2.2",
        "copy-webpack-plugin": "^10.0.0",
        "css-loader": "^5.2.7",
        "eslint": "^8.3.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.21.5",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.3.1",
        "jest": "^27.0.6",
        "jest-css-modules-transform": "^4.2.1",
        "prettier": "^2.2.1",
        "redux-devtools-extension": "^2.13.8",
        "style-loader": "^3.0.0",
        "terser-webpack-plugin": "^5.2.4",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "typescript": "^4.1.2",
        "url-loader": "^4.1.1",
        "webpack": "^5.64.4",
        "webpack-bundle-analyzer": "^4.2.0",
        "webpack-cli": "^4.2.0",
        "webpack-dev-server": "^4.0.0-beta.3",
        "webpack-merge": "^5.7.3"
    },
    "prettier": {
        "endOfLine": "lf",
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "trailingComma": "es5",
        "bracketSameLine": true,
        "arrowParens": "always"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:prettier/recommended"
        ],
        "globals": {
            "DEBUG": "readonly",
            "REVERSEPROXYON": "readonly",
            "exports": "writable",
            "require": "readonly",
            "process": "readonly",
            "module": "readonly",
            "BACKEND": "readonly",
            "FRONTEND": "readonly",
            "BITLY": "readonly",
            "ORCID": "readonly",
            "__TEST_ONLY__": "readonly",
            "global": "writable",
            "jest": "readonly",
            "expect": "readonly",
            "beforeAll": "readonly",
            "beforeEach": "readonly",
            "describe": "readonly",
            "it": "readonly",
            "fail": "readonly"
        },
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "plugins": [
            "react",
            "@typescript-eslint"
        ],
        "rules": {
            "prettier/prettier": "error",
            "no-unused-vars": [
                "error",
                {
                    "argsIgnorePattern": "^_"
                }
            ],
            "no-undef": [
                "error",
                {
                    "typeof": true
                }
            ],
            "no-var": "warn",
            "react/prop-types": "off",
            "react/jsx-key": "off",
            "eqeqeq": [
                "error",
                "always"
            ],
            "curly": [
                "error",
                "all"
            ],
            "no-bitwise": [
                "error"
            ]
        },
        "settings": {
            "react": {
                "version": "detect"
            }
        }
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-babel",
        "testEnvironment": "jsdom",
        "transform": {
            ".+\\.css$": "jest-css-modules-transform"
        },
        "globals": {
            "__TEST_ONLY__": true,
            "SERVER_URL": "http://localhost:8000",
            "API_PREFIX": "/api/v1/"
        },
        "coverageThreshold": {
            "global": {
                "branches": 18,
                "functions": 21,
                "lines": 36,
                "statements": 38
            }
        }
    }
}
